{
    "name": "<%= _.slugify(appName) %>",
    "description": "<%= appDescription %>",
    "version": "0.0.1",
    "private": false,
    "author": "<%= authorName %>",
    "repository": {
        "type": "git",
        "url": "https://github.com/<%= authorGithub %>/<%= _.slugify(appName) %>.git"
    },
    "engines": {
        "node": "0.10.x",
        "npm": "1.2.x"
    },
    "scripts": {
        "start": "node node_modules/grunt-cli/bin/grunt",
        "test": "node node_modules/grunt-cli/bin/grunt test"
    },
    "dependencies": {
        "express": "latest",
        "jade": "latest",
        "mongoose": "latest",
        "connect-mongo": "latest",
        "connect-flash": "latest",
        "underscore": "latest",
        "async": "latest",
        "view-helpers": "latest",
        "forever": "latest",
        "grunt": "latest",
        "grunt-cli": "latest"
    },
    "devDependencies": {
        "supertest": "latest",
        "should": "latest",
        <% if (compassBootstrap) { %>
        "grunt-contrib-compass": "~0.5.0",<% } %>
        "grunt-contrib-watch": "latest",
        "grunt-contrib-jshint": "latest",
        "grunt-nodemon": "latest",
        "grunt-concurrent": "latest",
        "grunt-mocha-test": "latest",
        "load-grunt-tasks": "~0.1.0",
        "time-grunt": "~0.1.1"
    }
}
